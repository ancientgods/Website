doctype HTML
html(xmlns='http://www.w3.org/1999/xhtml')
head
    link(rel='stylesheet', type='text/css', href='./stylesheets/layout.css')
    link(rel='stylesheet', type='text/css', href='./stylesheets/login.css')
    script(src='http://code.jquery.com/jquery-latest.min.js')
    script(type='text/javascript', src='./javascripts/login.js') 
    script(type='text/javascript', src='https://cdn.socket.io/socket.io-1.3.5.js')      

    title Cubiversum - Login
  body
    .container
      #login
        form
          fieldset.clearfix
            p: span.fontawesome-user
            input#un(type='text', value='Username', onblur="if(this.value == '') this.value = 'Username'", onfocus="if(this.value == 'Username') this.value = ''", required='')           
            p: span.fontawesome-lock
            input#pw(type='password', value='Password', onblur="if(this.value == '') this.value = 'Password'", onfocus="if(this.value == 'Password') this.value = ''", required='')                    
            p: input#loginButton(type='submit', value='Sign In')
         
